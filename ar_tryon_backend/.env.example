# Development Environment Variables
# Copy this file to .env and fill in your actual values

# Django Secret Key - keep this secret!
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production

# Database Configuration
# For development, we'll use SQLite (no setup required)
# For production, we'll use PostgreSQL
DEBUG=True
DATABASE_URL=sqlite:///db.sqlite3

# File uploads
MEDIA_ROOT=media/
STATIC_ROOT=static/

# For production deployment (leave empty for development)
ALLOWED_HOSTS=localhost,127.0.0.1

# Cloudinary (for production file storage - free tier)
# Get these from https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
